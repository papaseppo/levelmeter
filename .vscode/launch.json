    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/dotnet-levelmeter/bin/Debug/net8.0/dotnet-levelmeter.dll",
            "args": ["--config", "${workspaceFolder}/scales/definitions/cylinder_mm_d360_h335_1-30l_i1.json"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "logging": {
                "diagnosticsLog": {
                    "protocolMessages": false
                },
                "moduleLoad": false,
                "exceptions": true,
                "browserStdOut": false,
                "programOutput": true
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}