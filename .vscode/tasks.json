{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Format code",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "format"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Rebuild All Cylindric Scales",
            "type": "shell",
            "command": "find ~+/scales/definitions/cylinder*.json | xargs -I % dotnet run --project ~+/src/dotnet-levelmeter/dotnet-levelmeter.csproj -- -c %",
            "problemMatcher": []
        },
        {
            "label": "Check scales json schema",
            "type": "shell",
            "command": "find ~+/scales/definitions/*.json | xargs -I % check-jsonschema % --schemafile ~+/scales/definitions/schemas/scale-config",
            "problemMatcher": []
        }
    ]
}