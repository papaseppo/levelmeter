{
    "$schema": "./schemas/scale-config",
    "scale-config": {
        "containerForm": "cylinder",
        "lengthUnit": "mm",
        "volumeUnit": "gal (U.S.)",
        "diameter": 360,
        "height": 335,
        "minVolume": 0.1,
        "maxVolume": 30,
        "output": "./scales/svgs/{0}.svg",
        "description": "Scale for 360mm diameter cylindric container 1-9gal in gal intervals.",
        "sucessfullyAppliedTo": "-",
        "requiresTransferTape": false,
        "graduationMarkSettings": [
            {
                "interval": 1,
                "length": 24,
                "height": 1.25,
                "textTemplate": "{0} gal",
                "font": {
                    "family": "./fonts/BigShoulderStencilText/static/BigShouldersStencilText-ExtraBold.ttf",
                    "size": 8,
                    "offsetX": -2,
                    "offsetY": -5,
                    "textAlignment": "Right"
                }
            }
        ]
    }
}